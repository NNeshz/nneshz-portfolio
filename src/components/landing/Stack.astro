---
import cv from "@cv";
import Image from "astro/components/Image.astro";

const {
  stack: { sectionLabel, logos },
} = cv;
---

<section
  class="relative w-full text-center flex flex-col justify-center items-center gap-10 max-w-3xl px-4 py-20 sm:py-24 pointer-events-none mx-auto"
>
  <h2
    class="absolute top-[-20px] h-10 flex items-center px-4 py-1 rounded-full text-foreground text-sm sm:text-normal md:text-lg tracking-tighter bg-white shadow-md"
  >
    {sectionLabel}
  </h2>
  <div
    class="w-full h-fit max-w-3xl flex flex-col justify-center select-none overflow-hidden gradient"
  >
    <div class="w-max flex flex-nowrap gap-[4rem] animate-slide-logos">
      {
        logos
          .concat(logos)
          .map((logo) => (
            <Image
              src={logo.src}
              alt={logo.alt}
              width={64}
              height={864}
              loading="eager"
              class="size-20 object-contain"
            />
          ))
      }
    </div>
  </div>
</section>

<style>
  .gradient {
    mask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      transparent
    );
    webkitmask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      black transparent
    );
  }
</style>
