---
import Section from "../global/Section.astro";
import ExperienceCard from "../global/ExperienceCard.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

interface Experience {
  company: string;
  position: string;
  date: string;
  description: string;
  highlights: string[];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const experiences = t("experience") as Experience[];
---

<Section sectionLabel={t("work.title")} id="experience">
  <div class="flex flex-col gap-5 pointer-events-auto">
    {experiences.map((exp) => (
      <ExperienceCard experience={exp} />
    ))}
  </div>
</Section>